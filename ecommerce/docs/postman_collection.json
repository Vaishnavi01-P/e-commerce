{
  "info": {
    "name": "E-commerce Mini API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/health" }
    },
    {
      "name": "List Products",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/products?q=&category=&sort=price_asc&page=1&limit=12" }
    },
    {
      "name": "Get Product by ID",
      "request": { "method": "GET", "url": "{{baseUrl}}/api/products/{{id}}" }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000" },
    { "key": "id", "value": "" }
  ]
}
